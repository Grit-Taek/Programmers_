import java.util.*;
class Solution {
  public long solution(long n) {
        
      long answer = 0;
      String str = "" + n;
      String []arr = str.split("");
      Arrays.sort(arr);
      
      for(int i=0;i<arr.length;i++)
      {
          answer += Integer.parseInt(arr[i]) * Math.pow(10,i);
      }
      

      return answer;
  }
}
