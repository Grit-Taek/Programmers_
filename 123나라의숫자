class Solution {
    public String solution(int n) {
        String answer = "";
        while(n > 0)
        {
            int a = n%3;
            n /= 3;
            if(a == 0) {
                answer = 4 + answer;
                n -= 1;
            }
            else answer = a + answer;
            
        }
        return answer;
    }
}
